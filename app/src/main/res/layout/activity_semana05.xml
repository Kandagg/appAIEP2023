<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Semana05">

    <EditText
        android:id="@+id/txtLong2"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Ingrese Longitud 2"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLat2" />

    <EditText
        android:id="@+id/txtLat2"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="152dp"
        android:layout_marginBottom="152dp"
        android:ems="10"
        android:hint="Ingrese Latitud 2"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnLimpiar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtLat1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="37dp"
        android:text="Calculo de Distancia"
        app:layout_constraintStart_toStartOf="@+id/txtLat1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtLat1"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:hint="Ingrese Latitud 1"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/txtLong1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <EditText
        android:id="@+id/txtLong1"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:hint="Ingrese Longitud 1"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="325dp"
        android:text="Distancia: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtLong2" />

    <TextView
        android:id="@+id/lbl_distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <Button
        android:id="@+id/btnLimpiar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="Limpiar"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCalcular2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCalcular2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="41dp"
        android:text="Calcular"
        app:layout_constraintStart_toEndOf="@+id/btnLimpiar2"
        app:layout_constraintTop_toBottomOf="@+id/lbl_distancia" />


</androidx.constraintlayout.widget.ConstraintLayout>